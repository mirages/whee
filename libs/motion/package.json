{
  "name": "js-motion",
  "version": "1.0.0",
  "description": "motion for mobile",
  "files": [
    "dist",
    "types"
  ],
  "main": "dist/motion.umd.js",
  "module": "dist/motion.esm.js",
  "types": "types/index.d.ts",
  "scripts": {
    "lint": "node node_modules/eslint/bin/eslint.js src/ --ext .ts --format codeframe",
    "types": "node node_modules/typescript/bin/tsc -d --declarationDir types --emitDeclarationOnly",
    "rollup": "node node_modules/rollup/dist/bin/rollup -c",
    "rollup:watch": "node node_modules/rollup/dist/bin/rollup -c -w",
    "build": "npm run lint && npm run rollup && npm run types",
    "test": "node node_modules/karma/bin/karma start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mirages/motion.git"
  },
  "bugs": {
    "url": "https://github.com/mirages/motion/issues"
  },
  "homepage": "https://github.com/mirages/motion.git#readme",
  "keywords": [
    "mobile",
    "motion",
    "guesture"
  ],
  "author": "mirages",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-typescript": "^5.0.2",
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.3",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "chai": "^4.2.0",
    "eslint": "^7.8.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "karma": "^5.2.2",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-typescript": "^5.2.0",
    "mocha": "^8.1.3",
    "rollup": "^2.26.10",
    "rollup-plugin-banner": "^0.2.1",
    "rollup-plugin-uglify": "^6.0.4",
    "tslib": "^2.0.1",
    "typescript": "^4.0.2"
  }
